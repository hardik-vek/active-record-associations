<h1 class="center">Event Listing</h1>
<center>
<%= link_to "Profile Page", events_profile_path, method: :post%>
<p>............................................................................</p>
</center>

<center>
  <div>
    <table>
      <th>Name</th>
      <th>Description</th>
      <th>Event_date</th>
      <th>Category</th>
      <th>Username</th>
      <th>Enrollment</th>
      <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.event_date %></td>
        <td><%= event.category.category_name %></td>
        <td><%= event.user.username %></td>
        <td><%= button_to "Enrollment",events_enrollment_path(event, user_id: current_user.id),method: :post %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <p>............................................................................</p>
</center>
<center>
<div class="new">
    <%= link_to "New Event", new_event_path, method: :get %>
</div>
</center>

<center>
<div>
    <%= link_to "Logout", root_path, method: :delete %>
</div>
</center>