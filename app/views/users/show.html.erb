
<center>
    <div>
        <table> 
            <th>User Name</th>
            <th>User Email</th>
            <th colspan=3>Actions</th>

            <tr>
                <td><%= @user.username %></td>
                <td><%= @user.email %></td>
                <td><%= button_to "Edit",edit_user_path(@user),method: :get %></td>
                <td><%= button_to "Delete",user_path(@user),method: :delete %></td>
                <td><%= button_to "Back",users_path,method: :get %></td>
            </tr>
        </table>
    </div>
</center>

